<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
  <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
    <div class="card-body">
      <h3 class="card-title text-center mb-4">Bem-vindo de volta! ðŸ‘‹</h3>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, "E-mail", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Digite seu e-mail" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "Senha", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Digite sua senha" %>
        </div>

        <div class="form-check mb-4">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, "Lembrar de mim", class: "form-check-label" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Entrar", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>

      <hr class="my-4">

      <p class="text-center mb-1">
        <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "text-decoration-none" %>
      </p>
      <p class="text-center">
        NÃ£o tem conta? <%= link_to "Cadastre-se!", new_registration_path(resource_name), class: "text-decoration-none" %>
      </p>
    </div>
  </div>
</div>
