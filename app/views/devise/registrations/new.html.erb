<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
  <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
    <div class="card-body">
      <h3 class="card-title text-center mb-4">Crie sua conta ðŸš€</h3>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, "E-mail", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Digite seu e-mail" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "Senha", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Crie uma senha" %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, "Confirme a senha", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirme sua senha" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Registrar", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <hr class="my-4">

      <p class="text-center">
        JÃ¡ tem conta? <%= link_to "FaÃ§a login!", new_session_path(resource_name), class: "text-decoration-none" %>
      </p>
    </div>
  </div>
</div>
